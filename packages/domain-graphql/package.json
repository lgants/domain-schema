{
  "name": "domain-graphql",
  "version": "0.0.1",
  "description": "GraphQL generator for Domain Schema",
  "repository": "https://github.com/sysgears/domain-schema.git",
  "author": "Victor Vlasenko <victor.vlasenko@sysgears.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint --fix -p tsconfig.json --type-check",
    "tests": " ",
    "test": "yarn tests && yarn lint",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "devDependencies": {
    "@types/node": "^7.0.18",
    "domain-schema": "^0.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.3",
    "prettier": "^1.6.1",
    "tslint": "^5.2.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.4.1"
  },
  "peerDependencies": {
    "domain-schema": "^0.0.2"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babylon"
  }
}
