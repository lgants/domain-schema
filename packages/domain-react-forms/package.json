{
  "name": "domain-react-forms",
  "version": "0.0.7",
  "description": "React Forms generator for Domain Schema",
  "repository": "https://github.com/sysgears/domain-schema.git",
  "author": "Victor Vlasenko <victor.vlasenko@sysgears.com>",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint --fix -p tsconfig.json -c ../../tslint.json",
    "tests": "jest",
    "test": "yarn tests && yarn lint",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^7.0.18",
    "domain-schema": "^0.0.7",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.1.3",
    "prettier": "^1.6.1",
    "ts-jest": "^21.2.1",
    "tslint": "^5.2.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.4.1"
  },
  "peerDependencies": {
    "domain-schema": ">= 0.0.7"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babylon"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "dependencies": {
    "debug": "^3.1.0"
  }
}
